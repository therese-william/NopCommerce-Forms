@model HomePageNewsItemsModel
@using Nop.Web.Models.News;
@if (Model.NewsItems.Count > 0)
{
    <div class="page-header">
        <h3 class="text-center">@T("News")</h3>
    </div>
    <div class="row">
            @foreach (var item in Model.NewsItems)
            {
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 text-center">
                    <h4><a class="news-title" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a></h4>
                    <small class="text-muted"><i>@item.CreatedOn.ToString("D")</i></small>
                    <p class="news-body text-justify">
                        @Html.Raw(item.Short)
                    </p>
                    <div class="buttons text-center">
                        <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="btn btn-primary">@T("News.MoreInfo")</a>
                    </div>
                </div>
            }
    </div>
       <div class="row marginTop10">
           <div class="text-center col-md-12">
               <a href="@Url.RouteUrl("NewsArchive")">@T("News.ViewAll")</a>
           </div>
       </div>


}