@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyAddedProducts").Text);
}
@using Nop.Web.Models.Catalog;
<div class="page-header page-header-custom">
    <a href="@Url.RouteUrl("RecentlyAddedProductsRSS")" class="pull-right tooltipOn" title="@T("Products.NewProducts.RSS.Hint")">
        <i class="fa fa-rss-square fa-2x colorRss"></i>
    </a>
    <h3>@T("Products.NewProducts")</h3>
</div>
<div class="page-body">
    @if (Model.Count > 0)
    {
        <div class="row text-center">
            @foreach (var product in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-4">
                    @Html.Partial("_ProductBox", product)
                </div>
            }
        </div>
    }
</div>
