@model ProductDetailsModel
@using Nop.Web.Models.Catalog;
@if (Model.DisplayBackInStockSubscription)
{
    Html.AddScriptParts("~/Scripts/jquery.fancybox-1.3.4.pack.js");
    Html.AddCssFileParts("~/Content/fancybox/jquery.fancybox-1.3.4.css");
    <div class="marginTop10">
        <a id="back-in-stock-subscribe-@Model.Id" class="btn btn-default">
           <i class="glyphicon glyphicon-envelope"></i> @T("BackInStockSubscriptions.NotifyMeWhenAvailable")
        </a>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#back-in-stock-subscribe-@Model.Id").fancybox({
                    'href': '@Url.RouteUrl("BackInStockSubscribePopup", new { productId = Model.Id })',
                    'speedIn': 600,
                    'speedOut': 200,
                    'width': 450,
                    'height': 255,
                    'type': 'iframe',
                    'centerOnScroll': true
                });
            });
        </script>
    </div>
}