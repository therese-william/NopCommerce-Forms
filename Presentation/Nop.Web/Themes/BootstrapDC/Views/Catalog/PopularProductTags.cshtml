@model PopularProductTagsModel
@using Nop.Web.Models.Catalog;
@if (Model.Tags.Count > 0)
{
    <nav class="navbar navbar-default panel panel-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#productbytag-sidebar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand visible-xs" href="#">@T("Products.Tags.Popular")</a>
        </div>
        <div class="panel-heading hidden-xs">
            <h3 class="panel-title">@T("Products.Tags.Popular")</h3>
        </div>
        <div class="navbar-collapse collapse" id="productbytag-sidebar">
            <div class="panel-body">
                <ul class="list-inline">
                    @foreach (var item in Model.Tags)
                {
                        <li><a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.SeName })" style="font-size:@(Model.GetFontSize(item))%;">@item.Name</a></li>
                    }
                </ul>
                @if (Model.TotalTags > Model.Tags.Count)
                {
                    <small class="view-all pull-right">
                        <a href="@Url.RouteUrl("ProductTagsAll")">@T("Products.Tags.Popular.ViewAll")</a>
                    </small>
                }
            </div>
        </div>
    </nav>
}