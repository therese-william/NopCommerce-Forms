@model PopularProductTagsModel
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.AllProductTags").Text);
}
@using Nop.Web.Models.Catalog;
    <div class="page-header page-header-custom">
        <h3>@T("Products.Tags.All")</h3>
    </div>
    <div class="page-body">
        @if (Model.Tags.Count > 0)
        {
            <ul class="list-inline">
                @foreach (var item in Model.Tags)
                {
                    <li>
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.SeName })" class="producttag" style="font-size:@(Model.GetFontSize(item))%;">
                        @item.Name</a>
                    </li>
                }
            </ul>
        }
    </div>
