@model VendorModel
@{
    //page title
    ViewBag.Title = T("Admin.Vendors.AddNew").Text;
}
@using (Html.BeginForm("Create", "Vendor", null, FormMethod.Post, new { onsubmit = "return kendovalidate()" }))
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-customers.png")" alt="" />
            @T("Admin.Vendors.AddNew") @Html.ActionLink("(" + T("Admin.Vendors.BackToList") + ")", "List")
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")"/>
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
<script>
    function kendovalidate() {
        var citycbox = $("#CityId").data("kendoComboBox");
        if (citycbox.value() == null || citycbox.value() == "") {
            alert("Please choose suburb or postcode.");
            return false;
        }
    }
</script>