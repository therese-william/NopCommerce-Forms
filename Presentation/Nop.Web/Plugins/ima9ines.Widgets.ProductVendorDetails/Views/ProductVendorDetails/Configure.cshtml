@using ima9ines.Nop.Plugin.Widgets.ProductVendorDetails.Models
@using Nop.Web.Framework
@model ConfigurationModel
@{
    Layout = "";
}
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    <table class="adminContent">
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.WidgetZone_OverrideForStore, model => model.WidgetZone, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.WidgetZone)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model => model.WidgetZone, Model.WidgetZones)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.ShowVendorEmail_OverrideForStore, model => model.ShowVendorEmail, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.ShowVendorEmail)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.ShowVendorEmail)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            </td>
        </tr>
    </table>
}