@model TopicModel
@using Nop.Web.Models.Topics;
@using Nop.Web.Extensions;

<li>
@if (!String.IsNullOrEmpty(Model.Title))
{
    <a href="@Url.RouteUrl("Topic", new { SeName = Html.GetTopicSeName(Model.SystemName) })" title="@Model.Title">@Model.Title</a>
}
else
{
    <a href="@Url.RouteUrl("Topic", new { SeName = Html.GetTopicSeName(Model.SystemName) })" title="@T("SevenSpikes.MegaMenu.DefaultTopicTitle")">@T("SevenSpikes.MegaMenu.DefaultTopicTitle")</a>
}
@if (!string.IsNullOrEmpty(Model.Body))
{
    <div class="dropdown">
        <div class="topic-wrapper">
            @Html.Raw(Model.Body)
        </div>
    </div>
}
</li>